<html>

	<body>

		<main>

			<h1>Liste des recettes</h1>

			{% for recipe in recipes %}

					<article>

						<h2>{{ recipe.title }}</h2>
                        <img src="{{ recipe.image }}" />
                        <ul>{% for ingredient in recipe.ingredients %} <li>{{ ingredient }}</li>{% endfor %}</ul>
						<p>{{ recipe.description }}</p>
						<p>{{ recipe.createdAt | date('d-m-Y')}}
                        <p>{{ recipe.category }}</p>		

					</article>
				
			{% endfor %}

		</main>

	</body>

</html>